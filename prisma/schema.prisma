// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  projects      Project[]
  documents     Document[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Project {
  id                String    @id @default(cuid())
  name              String
  description       String?
  type              String
  repoType          String
  repoUrl           String?
  repoBranch        String    @default("main")
  localPath         String?
  userId            String
  status            String    @default("ACTIVE")
  stableVersionId   String?
  metadata          String    @default("{}")
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  stableVersion     Version?  @relation("StableVersion", fields: [stableVersionId], references: [id])
  versions          Version[]
  jobs              Job[]
  logEntries        LogEntry[]
}

model Version {
  id              String    @id @default(cuid())
  projectId       String
  label           String
  description     String?
  parentVersionId String?
  isStable        Boolean   @default(false)
  fileCount       Int       @default(0)
  totalSizeBytes  Int       @default(0)
  createdByJobId  String?
  metadata        String    @default("{}")
  createdAt       DateTime  @default(now())
  
  project         Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  parentVersion   Version?  @relation("VersionParent", fields: [parentVersionId], references: [id])
  childVersions   Version[] @relation("VersionParent")
  createdByJob    Job?      @relation("JobCreatedVersions", fields: [createdByJobId], references: [id])
  outputForJob    Job?      @relation("JobOutputVersion")
  files           File[]
  stableProjects  Project[] @relation("StableVersion")
  
  @@unique([projectId, label])
}

model File {
  id          String   @id @default(cuid())
  versionId   String
  path        String
  filename    String
  extension   String?
  sizeBytes   Int
  contentHash String
  storagePath String
  metadata    String   @default("{}")
  createdAt   DateTime @default(now())
  
  version     Version  @relation(fields: [versionId], references: [id], onDelete: Cascade)
  
  @@unique([versionId, path])
}

model Job {
  id              String    @id @default(cuid())
  projectId       String
  type            String
  status          String    @default("PENDING")
  promptProfileId String?
  inputPrompt     String
  contextData     String    @default("{}")
  outputSummary   String?
  outputVersionId String?  @unique
  startedAt       DateTime?
  completedAt     DateTime?
  durationSeconds Int?
  errorMessage    String?
  metadata        String    @default("{}")
  createdAt       DateTime  @default(now())
  
  project         Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  outputVersion   Version?  @relation("JobOutputVersion", fields: [outputVersionId], references: [id])
  createdVersions Version[] @relation("JobCreatedVersions")
  logEntries      LogEntry[]
}

model LogEntry {
  id        String   @id @default(cuid())
  jobId     String
  projectId String
  level     String
  message   String
  metadata  String   @default("{}")
  timestamp DateTime @default(now())
  
  job       Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Customer {
  id                String   @id @default(cuid())
  name              String
  erc20Address      String   @unique
  tag               String   @default("Client")
  chains            String   @default("[\"eth\"]") // JSON array
  protocols         String   @default("[]") // JSON array
  email             String?
  btcWallet         String?
  totalValue        Float    @default(0)
  totalDebt         Float    @default(0)
  healthFactor      Float    @default(0)
  status            String   @default("unknown")
  fireblocksVaultId String? // ID du vault Fireblocks associé
  fireblocksWalletId String? // ID du wallet Fireblocks associé
  lastUpdate        DateTime @default(now())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Document {
  id                String   @id @default(cuid())
  userId            String
  googleDriveFileId String   @unique // ID du fichier dans Google Drive
  name              String
  mimeType          String
  size              BigInt?  // Taille en octets
  category          String?  // Catégorie (Contrats, Rapports, etc.)
  description       String?
  webViewLink       String?  // Lien pour voir le fichier dans Google Drive
  webContentLink    String?  // Lien pour télécharger le fichier
  thumbnailLink     String?  // Lien vers la miniature
  parentFolderId    String?  // ID du dossier parent dans Google Drive
  starred           Boolean  @default(false)
  trashed           Boolean  @default(false)
  shared            Boolean  @default(false)
  ownerEmail        String?  // Email du propriétaire du fichier
  importedAt        DateTime @default(now())
  lastSyncedAt      DateTime @default(now())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([category])
  @@index([googleDriveFileId])
  @@index([lastSyncedAt])
}

